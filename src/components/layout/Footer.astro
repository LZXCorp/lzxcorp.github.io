---
import Social from "../ui/Social.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const [staticData] = await getCollection("staticData");
const {
  github,
  alias,
  linkedin,
  linkedinIconName,
  githubIconName,
} = staticData.data;
---

<footer
  class="relative bottom-0 w-full px-4 py-8 font-medium text-blacktext dark:bg-transparent dark:border-b-2 dark:border-zinc-800 dark:text-zinc-300 max-lg:mt-3"
  role="contentinfo"
  aria-label="Site footer"
>
  <nav
    class="mx-auto max-w-7xl text-xl max-xl:px-6 flex flex-col gap-4 sm:grid sm:grid-cols-[1fr_auto_1fr] sm:items-center"
    aria-label="Footer navigation"
  >
    <div
  class="relative w-full sm:w-auto text-center sm:text-left h-6 cursor-pointer before:absolute before:left-1/2 before:top-1/2 before:h-full before:w-[40%] before:-translate-x-1/2 before:-translate-y-1/2 before:rounded-full before:bg-[#f43f5e25] before:blur-3xl before:opacity-80 before:-z-1 hover:text-mint-500 transition-all [text-shadow:0_1px_2px_#000]"
    >
      <a href="/" aria-label="Return to home">
      <h1 class="text-2xl whitespace-nowrap">LZX Blog</h1>
    </a>
    </div>
    <div class="text-center sm:justify-self-center">
      <a
        class="flex items-center justify-center gap-3 text-sm font-normal italic max-sm:text-sm"
        aria-label="About the website development"
        >Template by EFEELE, Developed with Astro</a
      >
    </div>
    <div
      class="flex items-center justify-center gap-5 sm:justify-self-end"
      role="group"
      aria-label="Social media links"
    >
      <Social
        link={github}
        iconName={githubIconName}
        label={`Visit ${alias} on GitHub`}
      />
      <Social
        link={linkedin}
        iconName={linkedinIconName}
        label={`Visit ${alias} on LinkedIn`}
      />
    </div>
  </nav>
</footer>
